<tr id=<%= "curso_#{curso.id}" %>>
  <td><%= link_to curso.id %></td>
  <td><%= curso.nombre %></td>
  <td><%= curso.ficha %></td>
  <td><%= curso.instructor_id %></td>
  
  <td>
    <%= link_to  image_tag('mostrar.png', :title => "mostrar"), curso,     :remote => true, :class => 'btn btn-mini' %>
    <%= link_to image_tag('editar1.png', :title => "Editar"), edit_curso_path(curso),  :remote => true,
        :class => 'btn btn-mini'%>
    <%= link_to image_tag('eliminar.png', :title => "Eliminar"), curso, :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
  <td><%= link_to image_tag('miembros.png', :tile => "Agregar cursos"), curso_estudiantes_path(curso) %></td>
       
  </td>
  <td>  <%= link_to 'Export XLS', url_for(:format => 'xls') %></td>
</tr>
  
         
            
             
